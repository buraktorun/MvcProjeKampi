@using EntityLayer.Concrete
@model IQueryable<Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<br />
<table class="table table-hover" style="margin-top:20px">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Kategori Açıklama</th>
        <th>Kategori Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Başlıklar</th>
    </tr>

    @foreach (var item in Model)
    {
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.CategoryName</td>
                <td>@item.CategoryDescription</td>
                <td>@item.CategoryStatus</td>

                <td><a href="/AdminCategory/DeleteCategory/@item.CategoryId" class="btn btn-info">Sil</a>
                <td><a href="/AdminCategory/UpdateCategory/@item.CategoryId" class="btn btn-warning">Güncelle</a></td>
                <td><a href="#" class="btn btn-dark">Başlıklar</a></td>
            </tr>

        }
    }
</table>

<a href="/AdminCategory/AddCategory" class="btn btn-danger">Yeni Kategori</a>
